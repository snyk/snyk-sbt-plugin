{
  "name": "snyk-sbt-plugin",
  "description": "Snyk CLI SBT plugin",
  "homepage": "https://github.com/snyk/snyk-sbt-plugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/snyk/snyk-sbt-plugin"
  },
  "files": [
    "dist",
    "scala"
  ],
  "directories": {
    "test": "test"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format:check": "prettier --check '{lib,test}/**/*.{js,ts,json,yml}'",
    "format": "prettier --write '{lib,test}/**/*.{js,ts,json,yml}'",
    "lint": "npm run format:check && npm run lint:eslint",
    "lint:eslint": "eslint --color --cache 'lib/**/*.{js,ts}'",
    "prepare": "npm run build",
    "test": "npm run lint && npm run build && npm run test-functional",
    "test-functional": "tap -Rspec ./test/functional/*.test.[tj]s",
    "test-system": "tap -Rspec --timeout=1000 ./test/system/*.test.[tj]s",
    "test-system-windows": "tap -Rspec --timeout=700 ./test/system-windows/*.test.[tj]s"
  },
  "author": "snyk.io",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^10.17.60",
    "@types/sinon": "7.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.3.2",
    "sinon": "^2.4.1",
    "tap": "12.6.1",
    "tap-only": "0.0.5",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "semver": "^6.1.2",
    "tmp": "^0.1.0",
    "tree-kill": "^1.2.2",
    "tslib": "^1.10.0"
  },
  "engines": {
    "node": ">=10"
  }
}
